
<script>
    var vm = new Vue({
        el: '#fmType',
        data: {
            id: '@ViewBag.Id',
            form: {},
            typeData: [],
            unitData: [],
            interval: null
        },
        methods: {
            selectType: function (e) {
                this.form.TypeName = this.$refs["cbType"].selectedOptions[0].text;
            },
            selectUnit: function (e) {
                this.form.UnitName = this.$refs["cbUnit"].selectedOptions[0].text;
            },
            init: function () {
                var that = this;
                var url = "/product/Get?id=" + (that.id ? that.id : "");
                $.get(url, function (json) {
                    if (json.Success) {
                        that.form = json.Data;
                    }
                });
                $.post("/productType/gettype", {}, function (json) {
                    that.typeData = json.rows;
                });
                $.get("/product/getunit", function (json) {
                    that.unitData = json.rows;
                });


            },
            save: function () {
                var that = this;
                that.form.IsActive = that.form.IsActive ? 1 : 0;
                if (!that.form.ImgUrl) {
                    $.messager.alert('提示', "请添加图片！", 'info');
                    return;
                }

                $.ajax({
                    method: "post",
                    url: "/product/save/",
                    data: that.form,
                    success: function (json) {
                        if (json.Success) {
                            $.messager.alert('提示', "保存成功！", 'info');
                        } else {
                            $.messager.alert('提示', json.Msg, 'error');
                        }
                    }
                });
            },
            handleAvatarSuccess(res, file) {
                //URL.createObjectURL(file.raw);
                if(res.Success)
                    this.form.ImgUrl = res.Data;
                else {
                    $.messager.alert('提示', res.Msg, 'error');
                }
            },
            beforeAvatarUpload(file) {
                var isJPG = file.type === 'image/jpeg';
                var isLt2M = file.size / 1024 / 1024 < 2;

                if (!isJPG) {
                    this.$message.error('上传头像图片只能是 JPG 格式!');
                }
                if (!isLt2M) {
                    this.$message.error('上传头像图片大小不能超过 2MB!');
                }
                return isJPG && isLt2M;
            }
        },
        created: function () {
            var that = this;
            that.init();
        }
    })
</script>
<style>
    .avatar-uploader .el-upload {
        border: 1px dashed #d9d9d9;
        border-radius: 6px;
        cursor: pointer;
        position: relative;
        overflow: hidden;
    }

        .avatar-uploader .el-upload:hover {
            border-color: #409EFF;
        }

    .avatar-uploader-icon {
        font-size: 28px;
        color: #8c939d;
        width: 178px;
        height: 178px;
        line-height: 178px;
        text-align: center;
    }

    .avatar {
        width: 178px;
        height: 178px;
        display: block;
    }
    .el-upload__input {
        display: none !important
    }
</style>
<div id="fmType" style="margin-top: 50px">
    <form class="form-horizontal col-sm-10 ">
        <div class="form-group">
            <label class="col-sm-2 control-label">商品名称</label>
            <div class="col-sm-10">
                <input type="text" v-model="form.Name" class="form-control" placeholder="请输入商品名称">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">商品编码</label>
            <div class="col-sm-10">
                <input type="text" v-model="form.Code" class="form-control" placeholder="请输入商品编码">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">商品类型</label>
            <div class="col-sm-10">
                <select ref="cbType" class="form-control" v-on:change="selectType()" v-model="form.TypeCode">
                    <option v-for="option in typeData" value="option.Code">{{option.Name}}</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">商品单位</label>
            <div class="col-sm-10">
                <select ref="cbUnit" v-on:change="selectUnit()" class="form-control" v-model="form.UnitCode">
                    <option v-for="option in unitData" value="option.Code">{{option.Name}}</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">商品图片</label>
            <div class="col-sm-10">
                <el-upload class="avatar-uploader"
                           action="/upload/img"
                           :show-file-list="false"
                           :on-success="handleAvatarSuccess"
                           :before-upload="beforeAvatarUpload">
                    <img v-if="form.ImgUrl" :src="form.ImgUrl" class="avatar">
                    <i v-else class="el-icon-plus avatar-uploader-icon"></i>
                </el-upload>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">是否启用</label>
            <div class="col-sm-10">
                <input type="checkbox" v-model="form.IsActive" class="form-control">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-9">
                <button type="button" v-on:click="save" class="btn btn-default">保存</button>
            </div>
        </div>
    </form>
</div>