
<style>
    
#d_product .datagrid-row {
  height: 60px;
}
#d_product .datagrid-cell   {
    height: auto;
}
</style>
<script>
    $(function () {
        Query({});
    });
    function Query(parm) {
        $('#gd_product').datagrid({
            title: '',
            iconCls: 'icon-save',
            height: 500,
            nowrap: true,
            autoRowHeight: false,
            striped: false,
            url: '/product/list',
            border: true,
            pagination: true,
            rownumbers: true,
            singleSelect: true,
            queryParams: parm,    //参数为了多条件查询预留
            columns: [[
                { field: 'ck', checkbox: true },
                {
                    field: 'ID', title: '价格', width: 60, formatter: function (value, row, index) {
                        return "<a href='#' onclick='javascript:lookPrice(\"" + value + "\")'  class='easyui-linkbutton'>查看</a>"
                    }
                },
                { field: 'Code', title: '商品编码', width: 180 },
                { field: 'Name', title: '商品名称', width: 180 },
                {
                    field: 'ImgUrl', title: '商品图片', width: 180, formatter: function (value, row, index) {
                        return "<img src='" + value + "' border='1'  style='height:60px;width:60px'  onerror=\"this.src='/images/nopic.png'\" />";
                    }
                },
                { field: 'TypeCode', title: '类型编码', width: 180 },
                { field: 'TypeName', title: '类型名称', width: 180 },
                { field: 'UnitCode', title: '单位编码', width: 180 },
                { field: 'UnitName', title: '单位名称', width: 180 },
                {
                    field: 'CreateDate', title: '创建时间', width: 180, formatter: function (str) {
                        var d = eval('new ' + str.substr(1, str.length - 2)); //new Date()
                        return d.format("yyyy-MM-dd hh:mm:ss");
                    }
                },
                {
                    field: 'IsActive', title: '是否启用', width: 180, formatter: function (value) {
                        return value == "1" ? "启用" : "不启用";
                    }
                }
            ]],
            toolbar: [{
                text: '添加',
                iconCls: 'icon-add',
                handler: function () {
                    //实现弹出添加用户信息的层
                    edit(0);
                }
            }, '-', {
                text: '修改',
                iconCls: 'icon-cut',
                handler: function () {
                    //实现弹出修改
                    var row = $('#gd_product').datagrid("getChecked");
                    if (row.length > 0) {
                        edit(row[0].ID);
                    } else {
                        $.messager.alert("警告", "请选择一行", "warning");
                    }
                }
            }, '-', {
                text: '删除',
                iconCls: 'icon-remove',
                handler: function () {
                    //确认只删除一条用户信息
                    var row = $('#gd_product').datagrid("getChecked");
                    if (row.length > 0) {
                        del(row[0].ID);
                    } else {
                        $.messager.alert("警告", "请选择一行", "warning");
                    }
                }
            }]
        });
    }
    function edit(id) {
        addTab("商品信息", "/product/edit?id=" + id, "icon-application", false);
    }
    function lookPrice(id) {
        addTab("商品价格", "/price/index?id=" + id, "icon-application-key", false);
    }

    function del(id) {
        $.messager.confirm("删除", "确定删除吗？", function (r) {
            if (r) {
                $.get("/producttype/delete?id=" + id, function (data) {
                    if (data.Success) {
                        $.messager.alert("提示", data.Msg, "info");
                        $('#gd_product').datagrid("reload");
                    } else {
                        $.messager.alert("警告", data.Msg, "error");
                    }
                });
            }
        });
    }
    function search(value) {
        Query({ Name: value });
    }
</script>

<div class="easyui-layout" fit="true">
    <div region="north" border="false" style="height:50px">
        <div class="search-list">
            <label class="search-lable" for="Name">商品名称:</label>
            <input  class="easyui-searchbox form-control search-text" type="text" name="Name" data-options="searcher:search,prompt:'请输入商品名称'" />
        </div>
    </div>
    <div region="center" id="d_product" border="false">
        <table id="gd_product"></table>
    </div>
</div>